<!DOCTYPE html>
<html>
<head>

    <!-- meta data -->

    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name=viewport content="width=device-width, initial-scale=1">

    <!-- title and favicon -->

    <title>Connexion</title>
    <link rel="icon" href="{{ app.rootRoute }}/web/img/icon/fav_icon.gif">
    <link type="text/css" rel="stylesheet" href="{{ app.rootRoute }}/web/css/bootstrap.css"/>
    <link type="text/css" rel="stylesheet" href="{{ app.rootRoute }}/web/css/jquery-ui.css"/>

    <link type="text/css" rel="stylesheet"
          href="http://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.4.0/css/font-awesome.min.css"/>
    <script type="text/javascript" src="{{ app.rootRoute }}/web/js/jquery-2.1.3.min.js"></script>
    <script type="text/javascript" src="{{ app.rootRoute }}/web/js/bootstrap.min.js"></script>

    <style>
        @import url(http://fonts.googleapis.com/css?family=Roboto:400);

        body {
            background-color: #fff;
            -webkit-font-smoothing: antialiased;
            font: normal 14px Roboto, arial, sans-serif;
        }

        .container {
            padding: 25px;
            position: fixed;
        }

        .form-login {
            background-color: #EDEDED;
            padding-top: 10px;
            padding-bottom: 20px;
            padding-left: 20px;
            padding-right: 20px;
            border-radius: 15px;
            border-color: #d2d2d2;
            border-width: 5px;
            box-shadow: 0 1px 0 #cfcfcf;
        }

        h4 {
            border: 0 solid #fff;
            border-bottom-width: 1px;
            padding-bottom: 10px;
            text-align: center;
        }

        .form-control {
            border-radius: 10px;
        }

        .wrapper {
            text-align: center;
        }
    </style>

</head>

<body>

{% if is_granted('IS_AUTHENTICATED_FULLY') %}
    {% if is_granted('ROLE_ADMIN') %}
        <div class="container">
            {% if res is defined %}
                {% if res %}
                    <p class="bg-success">Le mot de pass a été mis à jour avec succès</p>
                {% else %}
                    <p class="bg-danger">Le mot de pass n'a pas pu être mis à jour</p>
                {% endif %}
            {% endif %}


            <form class="form-horizontal col-lg-8 col-lg-push-2" action="{{ path('modifierUser') }}" method="post">
                <fieldset>

                    <!-- Form Name -->
                    <legend>Modification de mot de passe utilisateur</legend>


                    <!-- Text input-->
                    <div class="form-group">
                        <label class="col-md-4 control-label" for="textinput">Adresse Mail</label>

                        <div class="col-md-4">
                            <input id="mail" name="email" type="mail" placeholder="example@email.fr"
                                   class="form-control input-md">

                        </div>
                    </div>

                    <!-- Text input-->
                    <div class="form-group">
                        <label class="col-md-4 control-label" for="password">Mot de passe</label>

                        <div class="col-md-4">
                            <input id="password" name="pass" type="password" placeholder="mot de passe"
                                   class="form-control input-md">

                        </div>
                    </div>

                    <!-- Button -->
                    <div class="form-group">

                        <div class="col-md-4">
                            <button id="update" name="update" class="btn btn-warning">Modifier</button>
                        </div>
                    </div>

                </fieldset>
            </form>
        </div>
    {% else %}
        <h2 class="small-heading">Vous devez être administrateur pour y accéder</h2>
    {% endif %}

{% endif %}
</body>

</html>


